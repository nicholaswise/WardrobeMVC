@model IEnumerable<WardrobeMVC.Models.Accessory>

@{
    ViewBag.Title = "Index";
}
<center>
    <h2>Accessories</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
</center>

@foreach (var item in Model)
{
    <div class="col s12 m7">
        <h3 class="header">@Html.DisplayFor(modelItem => item.Name)</h3>
        <div class="card horizontal">
            <div class="card-image">
                <img class="img-responsive" src="">
            </div>
            <div class="card-small">
                <div class="card-content">
                    <h4>@Html.DisplayNameFor(model => model.Type)</h4>
                    <p>@Html.DisplayFor(modelItem => item.Type)</p>
                    <h4>@Html.DisplayNameFor(model => model.Color)</h4>
                    <p>@Html.DisplayFor(modelItem => item.Color)</p>
                    <h4>@Html.DisplayNameFor(model => model.Season)</h4>
                    <p>@Html.DisplayFor(modelItem => item.Season)</p>
                    <h4>@Html.DisplayNameFor(model => model.Occasion)</h4>
                    <p>@Html.DisplayFor(modelItem => item.Occasion)</p>
                    <span>
                        @Html.ActionLink("Edit", "Edit", new { id = item.AccessoriesID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.AccessoriesID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.AccessoriesID })
                    </span>
                </div>
            </div>
        </div>
    </div>
}
