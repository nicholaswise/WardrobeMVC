<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Personal Wardrobe</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--Font-->
    <link href="https://fonts.googleapis.com/css?family=Lora|Playfair+Display" rel="stylesheet">

    <!--Dropdowns-->
    <style>
        li {
            float: left;
        }

            li a, .dropbtn {
                display: inline-block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                li a:hover, .dropdown:hover .dropbtn {
                    color:#81C784;
                }

            li.dropdown {
                display: inline-block;
            }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="box-1">
                    @Html.ActionLink("Personal Wardrobe", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropbtn">Tops</a>
                        <div class="dropdown-content">
                            <a @Html.ActionLink("Add New", "Create", "Tops")</a>
                            <a @Html.ActionLink("See Collection", "Index", "Tops")</a>
                        </div>
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropbtn">Bottoms</a>
                        <div class="dropdown-content">
                            <a @Html.ActionLink("Add New", "Create", "Bottoms")</a>
                            <a @Html.ActionLink("See Collection", "Index", "Bottoms")</a>
                        </div>
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropbtn">Shoes</a>
                        <div class="dropdown-content">
                            <a @Html.ActionLink("Add New", "Create", "Shoes")</a>
                            <a @Html.ActionLink("See Collection", "Index", "Shoes")</a>
                        </div>
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropbtn">Accessories</a>
                        <div class="dropdown-content">
                            <a @Html.ActionLink("Add New", "Create", "Accessories")</a>
                            <a @Html.ActionLink("See Collection", "Index", "Accessories")</a>
                        </div>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Personal Wardrobe</p>
            <p>Phone: 1-800-YOU-SHOP</p>
            <p>E-mail: customerservice@personalwardrobe.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
